.jumbotron
  min-height 250px
  position relative
  +pc()
    min-height 400px
  &__bg
    width 100%
    height 100%
    position absolute
    top 50%
    left 50%
    z-index 0
    transform translate(-50%, -50%)
    img
      width 100%
      height 100%
      object-fit cover
      font-family 'object-fit:cover;'
  .container
    position relative
    z-index 1
